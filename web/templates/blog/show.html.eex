<div class="mobile-indent">
  <h3 class="blog-title"><%= String.upcase(@post.title) %></h3>
  <div class="blog-tags">
    <%= for tag <- @post.tags do %>
    <div class="tag <%= tag.name %>"><%= tag.name %></div>
    <% end %>
  </div>
<p class="blog-date">Published <%= NaiveDateTime.to_date(@post.date) %></p>
</div>
<div class="blog-content">
<%= AdamczDotCom.BlogView.markdown(@post.content) %>
 
</div>







<script>
document.addEventListener("DOMContentLoaded", function(event) { 
  hljs.initHighlightingOnLoad();
});
</script>